<Application x:Class="HospiSafe_WPF.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             StartupUri="Views\LoginView.xaml">
    <Application.Resources><!-- Estilos simples copiados de la web -->
        <SolidColorBrush x:Key="PrimaryColor">#0f4c81</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryLightColor">#3b82f6</SolidColorBrush>
        <SolidColorBrush x:Key="Gray50">#f8fafc</SolidColorBrush>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Application.Resources>
</Application>