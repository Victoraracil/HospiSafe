<UserControl x:Class="HospiSafe.Views.PruebasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000"
             Background="{StaticResource Gray50}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecera: volver + título + botón -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="← Volver"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#334155"
                    Padding="6,4"
                    Command="{Binding VolverCommand}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <TextBlock Text="🔬" FontSize="18" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Titulo}" FontSize="20" FontWeight="Bold" Foreground="#0f172a"/>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="+ Nuevo Análisis"
                    Background="{StaticResource PrimaryColor}"
                    Foreground="White"
                    Padding="12,6"
                    BorderThickness="0"
                    Height="32"
                    Command="{Binding NuevoCommand}"/>
        </Grid>

        <!-- Buscador con lupa -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                BorderBrush="#e2e8f0"
                BorderThickness="1"
                Padding="10"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                         Height="32"
                         Padding="10,5"
                         BorderThickness="0"
                         Background="#f8fafc"
                         VerticalContentAlignment="Center"/>

                <Border Grid.Column="1"
                        Width="36"
                        Height="32"
                        CornerRadius="8"
                        Background="#f1f5f9"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="🔎"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Formulario -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="10"
                BorderBrush="#e2e8f0"
                BorderThickness="1"
                Padding="12"
                Margin="0,0,0,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding FormVisible}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Paciente" FontSize="12" Foreground="#475569" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Pacientes}"
                                  SelectedItem="{Binding PacienteSeleccionado}"
                                  DisplayMemberPath="DNI"
                                  Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Usuario/Médico" FontSize="12" Foreground="#475569" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Usuarios}"
                                  SelectedItem="{Binding UsuarioSeleccionado}"
                                  DisplayMemberPath="CorreoElectronico"
                                  Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Tipo de análisis" FontSize="12" Foreground="#475569" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TipoAnalisis, UpdateSourceTrigger=PropertyChanged}"
                                 Height="32"
                                 Padding="10,5"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding Resultados, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Padding="10,5"
                             VerticalContentAlignment="Center"
                             Margin="0,0,10,0"
                             ToolTip="Resultados (opcional)"/>

                    <Button Grid.Column="1"
                            Content="Cancelar"
                            Height="32"
                            Padding="12,6"
                            Margin="0,0,10,0"
                            Command="{Binding CancelarCommand}"/>

                    <Button Grid.Column="2"
                            Content="Guardar"
                            Height="32"
                            Padding="12,6"
                            Background="{StaticResource PrimaryColor}"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding GuardarCommand}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Tabla fija -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="10"
                BorderBrush="#e2e8f0"
                BorderThickness="1"
                Padding="10">

            <Grid>
                <DataGrid ItemsSource="{Binding Pruebas}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeaderWidth="0"
                          FontSize="12"
                          CanUserResizeColumns="False"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="FECHA"
                                            Binding="{Binding Fecha, StringFormat=\{0:dd/MM/yyyy HH:mm\}}"
                                            Width="150" />

                        <DataGridTextColumn Header="PACIENTE"
                                            Binding="{Binding Paciente.DNI}"
                                            Width="120" />

                        <DataGridTextColumn Header="USUARIO"
                                            Binding="{Binding Usuario.CorreoElectronico}"
                                            Width="220" />

                        <DataGridTextColumn Header="TIPO"
                                            Binding="{Binding TipoAnalisis}"
                                            Width="200" />

                        <DataGridTextColumn Header="ESTADO"
                                            Binding="{Binding Estado}"
                                            Width="110" />

                        <DataGridTextColumn Header="RESULTADOS"
                                            Binding="{Binding Resultados}"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Mensaje vacío -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Pruebas.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="⚗️" FontSize="40" Opacity="0.25" HorizontalAlignment="Center"/>
                    <TextBlock Text="No hay análisis registrados"
                               FontSize="14"
                               Foreground="#64748b"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <Button Content="Cargar"
                            Width="120"
                            Margin="0,15,0,0"
                            Command="{Binding CargarCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
