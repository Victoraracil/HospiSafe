<Window x:Class="HospiSafe.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:HospiSafe" xmlns:vm="clr-namespace:HospiSafe.ViewModels" xmlns:views="clr-namespace:HospiSafe.Views" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:PruebasViewModel}">
            <views:PruebasView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UsuariosViewModel}">
            <views:UsuariosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PacientesViewModel}">
            <views:PacientesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CitasViewModel}">
            <views:CitasView/>
        </DataTemplate>
    </Window.Resources>
<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="+" FontSize="20" Foreground="{StaticResource PrimaryLightColor}" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="HospiSafe" FontSize="20" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryLightColor}" Width="40" Height="40" CornerRadius="20" Margin="0,0,10,0">
                        <TextBlock Text="{Binding UserInitial}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock Text="{Binding UserName}" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="{Binding UserRole}" Foreground="#64748b" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">
                        <Button Content="Inicio"
                            Padding="18,8"
                            FontSize="14"
                            Background="Transparent"
                            BorderBrush="#cbd5e1"
                            BorderThickness="1"
                            Foreground="#334155"
                            Cursor="Hand"
                            Command="{Binding VolverInicioCommand}"/>
                        <Button Content="Cerrar sesión"
                            Padding="18,8"
                            FontSize="14"
                            Background="#fee2e2"
                            Foreground="#991b1b"
                            BorderThickness="1"
                            Margin="10,0,0,0"
                            Cursor="Hand"
                            Command="{Binding LogoutCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                        
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>

        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
