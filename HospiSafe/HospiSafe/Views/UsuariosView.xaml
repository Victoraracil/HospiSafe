<UserControl x:Class="HospiSafe.Views.UsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospiSafe.Views" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="{StaticResource Gray50}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#e2e8f0"
                BorderThickness="0,0,0,1"
                Padding="20,15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Gestión de Usuarios"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryColor}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    
                    <Button Content="Cargar"
                            Margin="0,0,10,0"
                            Padding="12,6"
                            Background="Transparent"
                            BorderBrush="#cbd5e1"
                            BorderThickness="1"
                            Command="{Binding CargarCommand}"/>

                    <Button Content="Nuevo Usuario"
                            Padding="12,6"
                            Margin="0,0,10,0"
                            Background="{StaticResource PrimaryColor}"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding CrearNuevoUsuarioCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= CONTENIDO ================= -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ========= LISTADO DE USUARIOS ========= -->
            <Border Grid.Column="0"
                Background="White"
                CornerRadius="12"
                BorderBrush="#e2e8f0"
                BorderThickness="1"
                Padding="20"
                Margin="0,0,15,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Titulo de la lista-->
                    <TextBlock Grid.Row="0"
                       Text="Usuarios registrados"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

                    <!--Lista-->
                    <ListView Grid.Row="1"
                      x:Name="lvUsuarios"
                      ItemsSource="{Binding ListaUsuariosVisible}"
                      SelectedItem="{Binding UsuarioSelected}"
                      BorderThickness="0"
                      HorizontalContentAlignment="Stretch"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                        
                        <!-- Cuando cambia la selección, notificamos al VM -->
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                    Command="{Binding SelectedItemChangedCommand}"
                                    CommandParameter="{Binding ElementName=lvUsuarios, Path=SelectedItem}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8fafc"
                                    CornerRadius="10"
                                    Padding="12"
                                    Margin="0,0,0,10">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Nombre}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#0f172a"/>

                                            <TextBlock Text="{Binding Apellidos}"
                                           FontSize="12"
                                           Foreground="#475569"/>

                                            <TextBlock Text="{Binding DNI}"
                                           FontSize="12"
                                           Foreground="#64748b"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding CorreoElectronico, StringFormat=Email: {0}}"
                                           FontSize="12"
                                           Foreground="#64748b"/>

                                            <TextBlock Text="{Binding Telefono, StringFormat=Teléfono: {0}}"
                                           FontSize="12"
                                           Foreground="#64748b"/>

                                            <TextBlock Text="{Binding Rol}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryColor}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>


            <!-- ========= FORMULARIO ========= -->
            <Border Grid.Column="1"
                Background="White"
                CornerRadius="12"
                BorderBrush="#e2e8f0"
                BorderThickness="1"
                Padding="25">

                <StackPanel>

                    <!-- Encabezado del formulario -->
                    <Border Background="#f1f5f9"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,0,0,15">
                        <TextBlock Text="Datos del Usuario"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"/>
                    </Border>

                    <!--Filas y elementos-->
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- nombre -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                            <TextBlock Text="Nombre"/>
                            <TextBox Text="{Binding Nombre}"
                                 Height="34"
                                 FontSize="16"
                                 Padding="8"/>
                        </StackPanel>

                        <!-- apellids -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                            <TextBlock Text="Apellidos"/>
                            <TextBox Text="{Binding Apellidos}"
                                 Height="34"
                                 FontSize="16"
                                 Padding="8"/>
                        </StackPanel>

                        <!-- dni -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                            <TextBlock Text="DNI"/>
                            <TextBox Text="{Binding DNI}" Height="34" Padding="8"/>
                        </StackPanel>

                        <!-- fcha -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Center">
                            <TextBlock Text="Fecha de nacimiento"/>
                            <DatePicker SelectedDate="{Binding FechaNacimiento}" Height="34"/>
                        </StackPanel>

                        <!-- tlfono -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                            <TextBlock Text="Teléfono"/>
                            <TextBox Text="{Binding Telefono}" Height="34" Padding="8"/>
                        </StackPanel>

                        <!-- correo -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
                            <TextBlock Text="Correo electrónico"/>
                            <TextBox Text="{Binding CorreoElectronico}" Height="34" Padding="8"/>
                        </StackPanel>

                        <!-- rol -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center">
                            <TextBlock Text="Rol"/>
                            <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding Rol}" Height="34" IsEnabled="False"/>
                        </StackPanel>

                        <!-- password -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
                            <TextBlock Text="Contraseña"/>
                            <PasswordBox x:Name="PasswordBox" Height="34"/>
                        </StackPanel>
                    </Grid>

                    <!-- botones guardar eliminar -->
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">

                        <Button Content="Guardar"
                        Padding="18,8"
                        FontSize="14"
                        Background="{StaticResource PrimaryColor}"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Command="{Binding GuardarUsuarioCommand}"
                        Click="Guardar_Click"/>

                        <Button Content="Eliminar"
                        Padding="18,8"
                        FontSize="14"
                        Background="#fee2e2"
                        Foreground="#991b1b"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Command="{Binding EliminarUsuarioCommand}"/>

                        <Button Content="Limpiar"
                        Padding="18,8"
                        Margin="0,0,10,0"
                        FontSize="14"
                        Background="Transparent"
                        BorderBrush="#cbd5e1"
                        BorderThickness="1"
                        Command="{Binding LimpiarDatosCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</UserControl>
