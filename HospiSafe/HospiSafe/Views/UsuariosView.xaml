<UserControl x:Class="HospiSafe.Views.UsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospiSafe.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="{StaticResource Gray50}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#e2e8f0"
                BorderThickness="0,0,0,1"
                Padding="20,15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Gestión de Usuarios"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryColor}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cargar"
                            Margin="0,0,10,0"
                            Padding="12,6"
                            Background="Transparent"
                            BorderBrush="#cbd5e1"
                            BorderThickness="1"
                            Command="{Binding CargarCommand}"/>

                    <Button Content="Nuevo Usuario"
                            Padding="12,6"
                            Background="{StaticResource PrimaryColor}"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding CrearNuevoUsuarioCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= CONTENIDO ================= -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ========= LISTADO DE USUARIOS ========= -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="#e2e8f0"
                    BorderThickness="1"
                    Padding="20"
                    Margin="0,0,15,0">

                <StackPanel>
                    <TextBlock Text="Usuarios registrados"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ListView ItemsSource="{Binding ListaUsuariosVisible}"
                              SelectedItem="{Binding UsuarioSelected, Mode=TwoWay}"
                              BorderThickness="0">

                        <!-- Cuando cambia la selección, notificamos al VM -->
                        <ListView.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding SelectedItemChangedCommand}"
                                          CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                        </ListView.InputBindings>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8fafc"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,0,8">

                                    <StackPanel>
                                        <TextBlock Text="{Binding Nombre}"
                                                   FontWeight="Bold"/>

                                        <TextBlock Text="{Binding Apellidos}"
                                                   FontSize="12"
                                                   Foreground="#64748b"/>

                                        <TextBlock Text="{Binding CorreoElectronico}"
                                                   FontSize="12"
                                                   Foreground="#64748b"/>

                                        <TextBlock Text="{Binding Rol}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource PrimaryColor}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- ========= FORMULARIO ========= -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="#e2e8f0"
                    BorderThickness="1"
                    Padding="25">

                <StackPanel>
                    <TextBlock Text="Datos del Usuario"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <UniformGrid Columns="2" Rows="4" Margin="0,0,0,10">

                        <StackPanel Margin="5">
                            <TextBlock Text="Nombre"/>
                            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Apellidos"/>
                            <TextBox Text="{Binding Apellidos, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="DNI"/>
                            <TextBox Text="{Binding DNI}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Fecha de nacimiento"/>
                            <DatePicker SelectedDate="{Binding FechaNacimiento}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Teléfono"/>
                            <TextBox Text="{Binding Telefono}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Correo electrónico"/>
                            <TextBox Text="{Binding CorreoElectronico}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Rol"/>
                            <ComboBox ItemsSource="{Binding Roles}"
                                      SelectedItem="{Binding Rol}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Contraseña"/>
                            <PasswordBox x:Name="PasswordBox"/>
                        </StackPanel>

                    </UniformGrid>

                    <!-- ===== BOTONES ===== -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,15,0,0">

                        <Button Content="Guardar"
                                Padding="15,6"
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Command="{Binding GuardarUsuarioCommand}"
                                CommandParameter="{Binding ElementName=PasswordBox, Path=Password}"/>

                        <Button Content="Eliminar"
                                Padding="15,6"
                                Background="#fee2e2"
                                Foreground="#991b1b"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Command="{Binding EliminarUsuarioCommand}"/>

                        <Button Content="Limpiar"
                                Padding="15,6"
                                Background="Transparent"
                                BorderBrush="#cbd5e1"
                                BorderThickness="1"
                                Command="{Binding LimpiarDatosCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
