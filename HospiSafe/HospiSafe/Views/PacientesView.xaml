<UserControl x:Class="HospiSafe.Views.PacientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospiSafe.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{StaticResource Gray50}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0"
            Background="White"
            BorderBrush="#e2e8f0"
            BorderThickness="0,0,0,1"
            Padding="20,15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Gestión de Pacientes"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">

                    <Button Content="Cargar"
                        Margin="0,0,10,0"
                        Padding="12,6"
                        Background="Transparent"
                        BorderBrush="#cbd5e1"
                        BorderThickness="1"
                        Command="{Binding CargarCommand}"/>

                    <Button Content="Nuevo Paciente"
                        Padding="12,6"
                        Margin="0,0,10,0"
                        Background="{StaticResource PrimaryColor}"
                        Foreground="White"
                        BorderThickness="0"
                        Command="{Binding CrearNuevoPacienteCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= CONTENIDO ================= -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ========= LISTADO DE PACIENTES ========= -->
            <Border Grid.Column="0"
                Background="White"
                CornerRadius="12"
                BorderBrush="#e2e8f0"
                BorderThickness="1"
                Padding="20"
                Margin="0,0,15,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                           Text="Pacientes registrados"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                    <ListView Grid.Row="1"
                          x:Name="lvPacientes"
                          ItemsSource="{Binding ListaPacientesVisible}"
                          SelectedItem="{Binding PacienteSelected}"
                          BorderThickness="0"
                          HorizontalContentAlignment="Stretch">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                Command="{Binding SelectedItemChangedCommand}"
                                CommandParameter="{Binding ElementName=lvPacientes, Path=SelectedItem}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8fafc"
                                    CornerRadius="10"
                                    Padding="12"
                                    Margin="0,0,0,10">

                                    <StackPanel>
                                        <TextBlock Text="{Binding Nombre}"
                                               FontWeight="Bold"/>

                                        <TextBlock Text="{Binding Apellidos}"
                                               FontSize="12"/>

                                        <TextBlock Text="{Binding DNI}"
                                               FontSize="12"
                                               Foreground="#64748b"/>

                                        <TextBlock Text="{Binding NumSS, StringFormat=Nº SS: {0}}"
                                               FontSize="12"
                                               Foreground="#64748b"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- ========= FORMULARIO ========= -->
            <Border Grid.Column="1"
                Background="White"
                CornerRadius="12"
                BorderBrush="#e2e8f0"
                BorderThickness="1"
                Padding="25">

                <StackPanel>

                    <TextBlock Text="Datos del Paciente"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryColor}"
                           Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Nombre -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                            <TextBlock Text="Nombre"/>
                            <TextBox Text="{Binding Nombre}" Height="34"/>
                        </StackPanel>

                        <!-- Apellidos -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                            <TextBlock Text="Apellidos"/>
                            <TextBox Text="{Binding Apellidos}" Height="34"/>
                        </StackPanel>

                        <!-- DNI -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                            <TextBlock Text="DNI"/>
                            <TextBox Text="{Binding DNI}"
                                 Height="34"/>
                        </StackPanel>

                        <!-- Fecha -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                            <TextBlock Text="Fecha nacimiento"/>
                            <DatePicker SelectedDate="{Binding FechaNacimiento}"/>
                        </StackPanel>

                        <!-- Teléfono -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                            <TextBlock Text="Teléfono"/>
                            <TextBox Text="{Binding Telefono}" Height="34"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
                            <TextBlock Text="Correo electrónico"/>
                            <TextBox Text="{Binding CorreoElectronico}" Height="34"/>
                        </StackPanel>

                        <!-- Num SS -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="5">
                            <TextBlock Text="Número Seguridad Social"/>
                            <TextBox Text="{Binding NumSS}" Height="34"/>
                        </StackPanel>
                    </Grid>

                    <!-- BOTONES -->
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">

                        <Button Content="Guardar"
                            Command="{Binding GuardarPacienteCommand}"
                            Margin="0,0,10,0"/>

                        <Button Content="Eliminar"
                            Command="{Binding EliminarPacienteCommand}"
                            Margin="0,0,10,0"/>

                        <Button Content="Limpiar"
                            Command="{Binding LimpiarDatosCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</UserControl>
